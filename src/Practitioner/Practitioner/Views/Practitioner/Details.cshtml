
@model EmployeeDetailViewModel
@{
    ViewData["Title"] = @Model.Employee.GetFullName();
}

    <partial name="_CategoryNav" model=@Model.CategoryNav />

<div class="container">
    <div class="row justify-content-center my-3">
        <div class="col-4">
            <partial name="_EmployeeCard" model="@Model.Employee" />
        </div>
        <div class="col-8">
            <div class="row">
                <div class="col-12 bg-success">
                    <p class="text-white my-2">Biographical Data</p>
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <p class="text-right">Gender:</p>
                    <p class="text-right">Race:</p>
                    <p class="text-right">Original Hire Date:</p>
                </div>
                <div class="col-3 bg-light">
                    <p>@Model.Employee.Gender</p>
                    <p>@Model.Employee.Race</p>
                    <p>@Model.Employee.OriginalHireDate.ToString("dd-MM-yyyy")</p>
                </div>
                <div class="col-3">
                    <p class="text-right">Direct Admit:</p>
                    <p class="text-right">Experience Credit:</p>
                    <p class="text-right">Mandatory Retire:</p>
                </div>
                <div class="col-3 bg-light">
                    <p>@Model.Employee.DirectAdmit</p>
                    <p>@Model.Employee.ExperienceCredit</p>
                    <p>@Model.Employee.MandatoryRetirement.ToString("dd-MM-yyyy")</p>
                </div>
            </div>
            <div class="row">
                <div class="col-12 bg-success">
                    <p class="text-white my-2">Demographic Data</p>
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <p class="text-right">Email:</p>
                    <p class="text-right">Office:</p>
                    <p class="text-right">Department</p>
                </div>
                <div class="col-3 bg-light">
                    <p>@Model.Employee.Email@@company.org</p>
                    <p>@Model.Employee.Office</p>
                    <p>@Model.Employee.Department</p>
                </div>
                <div class="col-3">
                    <p class="text-right">Status:</p>
                    <p class="text-right">Primary Industry:</p>
                    <p class="text-right">Sector:</p>
                </div>
                <div class="col-3 bg-light">
                    <p>@Model.Employee.Status</p>
                    <p>@Model.Employee.PrimaryIndustry</p>
                    <p>@Model.Employee.Sector</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="#">Notes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">General</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Dates</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Schedule</a>
            </li>
        </ul>
    </div>
    <div class="row">
        <div class="col-2">
            <p class="text-right">Notes</p>
        </div>
        <div class="col-10">
            <form>
                <div class="form-group">
                    <textarea class="form-control" rows="3"></textarea>
                </div>
            </form>
        </div>
    </div>
</div>